pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                git clone url

            }
        }

        stage('ci') {
            steps {
                zip -r html-helloworld-$BUILD_NUMBER.zip *
              aws s3 cp html-helloworld-$BUILD_NUMBER.zip s3://artifactory-cicd-html/
            }
        }

        stage('cd') {
            steps {
               aws s3 cp s3://artifactory-cicd-html/html-helloworld-$PKG.zip .
               unzip html-helloworld-$PKG.zip
               scp index.html root@172.31.15.6:/var/www/html/
            }
        }
    }
}
